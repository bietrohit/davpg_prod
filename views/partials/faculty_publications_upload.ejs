            <input  type="text" name="issn" class="form-control" id="issn" >
        </div>
        <div class="form-group">
            <label for="impact">Impact Factor</label>
            <input  type="text" name="impact" class="form-control" id="impact" >
        </div>
    </div>
    <button type="submit" class="btn btn-success" style="width: auto;"><i class="fa-solid fa-upload"></i></button>

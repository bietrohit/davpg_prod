<form action="/update_faculty_publication" method="post">
    <div class="publication-instance">
        <div class="form-group">
            <label for="title">Title</label>
            <input  type="text" name="publication" class="form-control" id="title" >
        </div>
        <div class="form-group">
            <label for="dept">Department</label>
            <input  type="text" name="department" class="form-control" id="dept" >
        </div>
        <div class="form-group">
            <label for="category">Category</label>
            <input  type="text" name="category" class="form-control" id="category">
        </div>
        <div class="form-group">
            <label for="year">Year</label>
            <input  type="text" name="year" class="form-control" id="year" >
        </div>
        <div class="form-group">
            <label for="month">Month</label>
            <input  type="text" name="month" class="form-control" id="month" >
        </div>
        <div class="form-group">
